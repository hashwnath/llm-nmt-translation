# LLM-NMT Translation System Configuration
# Copy this file to .env and fill in your values

# OpenAI API Key (required for ambiguity resolution)
OPENAI_API_KEY=your-openai-api-key-here

# OpenAI Settings
OPENAI_MODEL=gpt-4o-mini
OPENAI_TIMEOUT=30

# NMT Model Settings
NMT_MODEL_NAME=Helsinki-NLP/opus-mt-fr-en
NMT_USE_QUANTIZATION=true
NMT_BEAM_SIZE=5

# Cache Settings
CACHE_BACKEND=memory
CACHE_TTL_SECONDS=86400
CACHE_FUZZY_THRESHOLD=0.85

# Batch Processing
BATCH_MAX_SIZE=32

# Logging
LOG_LEVEL=INFO
